@model IEnumerable<WebApplication_test.Models.OrderItens>


<div class="form-horizontal">
    <hr />
    <h4>Products</h4>
    <div class="form-group">
        <label class="control-label col-md-2"> Product:</label>
        <div class="col-md-10">
            @Html.DropDownList("productId", String.Empty)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Quantity:</label>
        <div class="col-md-10">
            <input type="number" required min="0" id="Quantity" name="Quantity" onchange="checkQuantity();" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Add the discount you want for this product:</label>
        <div class="col-md-10">
            <input type="number" min="0" max="100" id="clientDiscount" name="clientDiscount" onchange="checkDiscountValue();"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Total Order Value:</label>
        <div class="col-md-10">
            <input readonly id="TotalOrderValue" name="TotalOrderValue" value="@ViewBag.totalOrderValue" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Total Order Value with Discount:</label>
        <div class="col-md-10">
            <input readonly id="TotalOrderValueWithDiscount" name="TotalOrderValueWithDiscount" value="@ViewBag.totalValueWithDiscount"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="#" onclick="SaveProducts();" class="btn btn-primary">Save Product to Order</a>
        </div>
    </div>
</div>

<input type="hidden" id="orderId" value="@ViewBag.OrderItens" />


<h4>Itens</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.product.description)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.unitPriceDescount)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.product.price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unitPriceDescount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.price)
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
